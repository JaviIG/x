{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./rules",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/__tests__"]
}
