{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "demo/**/*.ts"]
}
